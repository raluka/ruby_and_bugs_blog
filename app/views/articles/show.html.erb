<div>
  <h1 class="page-header"><%= @article.title %></h1>
  <p><%= @article.text %></p>
  <%= image_tag "/articles/#{@article.id}/cover/#{@article.cover_filename}" if @article.cover_filename? %>

  <%= link_to 'Edit', edit_article_path(@article) %>
  <%= link_to 'Back', articles_path %>
</div>


<div>
  <h2>Add a comment:</h2>
  <%= form_for([@article, @article.comments.build]) do |f| %>
      <p>
        <%= f.label :commenter %>
        <%= f.text_field :commenter %>
      </p>

      <p>
        <%= f.label :body %>
        <%= f.text_area :body %>
      </p>

      <p>
        <%= f.submit %>
      </p>
  <% end %>
</div>



